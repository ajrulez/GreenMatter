<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.GreenMatter.ActionBar.Solid" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/gm__solid_primary</item>
        <item name="backgroundStacked">@drawable/gm__solid_primary</item>
        <item name="backgroundSplit">@drawable/gm__solid_primary</item>
    </style>

    <!-- ListPopupWindow styles -->
    <style name="Widget.GreenMatter.ListPopupWindow" parent="android:Widget.Holo.ListPopupWindow">
        <item name="android:dropDownSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.GreenMatter.Button" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/gm__btn_default</item>
        <item name="android:textAppearance">?android:textAppearanceButton</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="Widget.GreenMatter.Button.Small" parent="android:Widget.Holo.Button.Small">
        <item name="android:background">@drawable/gm__btn_default</item>
        <item name="android:textAppearance">?android:textAppearanceButton</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="Widget.GreenMatter.ImageButton" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@drawable/gm__btn_default</item>
        <item name="android:textAppearance">?android:textAppearanceButton</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="Widget.GreenMatter.Button.Toggle" parent="android:Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/gm__btn_toggle</item>
        <item name="android:textAppearance">?android:textAppearanceButton</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- SwitchCompat style -->
    <style name="Widget.GreenMatter.CompoundButton.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/gm__switch_track</item>
        <item name="android:thumb">@drawable/gm__switch_thumb</item>
    </style>

    <!-- Circle (default) progress bar styles -->
    <style name="Widget.GreenMatter.ProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/gm__progress_circle</item>
    </style>
    <style name="Widget.GreenMatter.ProgressBar.Small" parent="android:Widget.Holo.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/gm__progress_circle</item>
    </style>
    <style name="Widget.GreenMatter.ProgressBar.Large" parent="android:Widget.Holo.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/gm__progress_circle</item>
    </style>

    <!-- Horizontal progress bar (must be set on the layout XML directly) -->
    <style name="Widget.GreenMatter.ProgressBar.Horizontal" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/gm__progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/gm__progress_indeterminate_horizontal</item>
    </style>

    <!-- SeekBar style -->
    <style name="Widget.GreenMatter.SeekBar" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/gm__scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/gm__scrubber_progress_horizontal</item>
        <item name="android:thumb">@drawable/gm__scrubber_thumb</item>
    </style>

    <style name="TextAppearance.GreenMatter.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- DropDown ListView styles -->
    <style name="Widget.GreenMatter.DropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <!-- PagerTabStrip styles -->
    <!--<style name="Widget.GreenMatter.PagerTabStrip">-->
        <!--<item name="android:textColor">@color/ha__accent</item>-->
        <!--<item name="android:background">@drawable/ha__pager_tab_strip_background</item>-->
    <!--</style>-->

    <!-- SearchView style -->
    <style name="Widget.GreenMatter.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/gm__textfield_search</item>
        <item name="submitBackground">@drawable/gm__textfield_search</item>
    </style>

    <!-- Actionbar Tab style -->
    <style name="Widget.GreenMatter.ActionBar.TabView" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/gm__tab_indicator</item>
    </style>

    <!-- Toolbar navigation button style -->
    <style name="Widget.GreenMatter.Toolbar.Button.Navigation" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@drawable/gm__circle_indicator</item>
    </style>

    <!-- CalendarView style -->
    <style name="Widget.GreenMatter.CalendarView" parent="android:Widget.Holo.CalendarView">
        <item name="android:selectedWeekBackgroundColor">@color/gm__calendar_selected_week</item>
        <item name="android:selectedDateVerticalBar">@drawable/gm__calendar_day_line</item>
    </style>

    <!-- Preferences styles -->
    <style name="Preference"/>
    <style name="Preference.GreenMatter"/>
    <style name="Preference.GreenMatter.Category">
        <item name="android:layout">@layout/gm__preference_category</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <!-- Styles for customizing the dialogs -->
    <style name="DialogWindowTitle"/>
    <style name="DialogWindowTitle.Alert">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.GreenMatter.AlertTitle</item>
    </style>
    <style name="TextAppearance.GreenMatter.AlertTitle" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="GreenMatter.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="Widget.GreenMatter.Button.Alert">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:padding">16dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="Widget.GreenMatter.Button.ButtonBar.AlertDialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

</resources>

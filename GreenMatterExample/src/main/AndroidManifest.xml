<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.negusoft.greenmatter.example">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity" android:theme="@style/AppTheme.Light.DarkActionBar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.TabbedActivity" />
        <activity android:name=".activity.variants.TabbedActivityLight" android:theme="@style/AppTheme.Light" />
        <activity android:name=".activity.variants.TabbedActivityLightDarkActionBar" android:theme="@style/AppTheme.Light.DarkActionBar" />

        <activity android:name=".activity.TabbedStripActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.variants.TabbedStripActivityLight" android:theme="@style/AppTheme.Light.NoActionBar" />
        <activity android:name=".activity.variants.TabbedStripActivityLightDarkActionBar" android:theme="@style/AppTheme.Light.DarkActionBar.NoActionBar" />

        <activity android:name=".activity.PreferencesActivity" />
        <activity android:name=".activity.variants.PreferencesActivityLight" android:theme="@style/AppTheme.Light" />
        <activity android:name=".activity.variants.PreferencesActivityLightDarkActionBar" android:theme="@style/AppTheme.Light.DarkActionBar" />

        <activity android:name=".activity.SpinnerActivity" android:theme="@style/AppTheme.Dialog" />
        <activity android:name=".activity.variants.SpinnerActivityLight" android:theme="@style/AppTheme.Light.Dialog" />
        
        <activity
            android:name=".activity.SelectColorActivity"
            android:theme="@style/AppTheme.Light.DarkActionBar.NoActionBar"
            android:label="@string/select_colors_title"/>

    </application>

</manifest>
